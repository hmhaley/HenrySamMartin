<div id="main-background"></div>

<!-- styling for Google map -->
  <style type="text/css">
      #map-canvas { height: 300px; margin: 0 auto; padding: 0; width: 600px;}
  </style>

  <!-- requiring Google map -->
  <script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
    
  <!-- Google map javascript functionality -->
  <script type="text/javascript">
      function initialize() {
        var myCenter = new google.maps.LatLng(34.0500,-118.2500);
        var mapOptions = {
          center: myCenter,
          zoom: 10
        };
        var map = new google.maps.Map(document.getElementById('map-canvas'),
            mapOptions);
        <% @organizations.each do |orgl| %>
          var marker = new google.maps.Marker({
            position: new google.maps.LatLng("<%= orgl.latitude%>", "<%= orgl.longitude%>"),
            map: map, 
            title: "<%= orgl.name %>"
          });
        <% end %>
      }
      google.maps.event.addDomListener(window, 'load', initialize);
  </script>

<div id="map-canvas"></div>

